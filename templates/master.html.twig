<!DOCTYPE html>
<html>
	<head>
		<title>
			{% block title %}Jitters
			{% endblock %}
		</title>
		<meta
		name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">


		{# bootstrap #}
		<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
		<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
		<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
		<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>
		{# Google Fonts #}
		<link
		href="https://fonts.googleapis.com/css2?family=Open+Sans&family=Oxygen:wght@400;700&family=Roboto:wght@500&display=swap" rel="stylesheet">
		{# Jitter stylesheets #}
		<link rel="stylesheet" href="/styles/styles.css"/> {% block head %}{% endblock %}
		</head>
		<body>
			<div class="container">

				{% block header %}

					{% if userSession %}

						<nav class="navbar navbar-light navbar-expand-md bg-warning fixed-top pl-3 pr-3 pt-2 text-white">
							<a class="navbar-brand nav-item nav-link active" href="/">
								J<sub>
									i</sub>
								<sup>t</sup>
								t<sub>
									e</sub>
								<sup>r</sup>
								s
							</a>

							<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent">
								<span class="navbar-toggler-icon"></span>
							</button>

							<div class="collapse navbar-collapse" id="navbarSupportedContent">
								<ul class="navbar-nav ml-auto text-white">
									<li class="nav-item">
										<a class="nav-link" href="/rewards">Rewards</a>
									</li>
									<li class="nav-item">
										<a class="nav-link" href="/cards">Cards</a>
									</li>
									<span>Welcome <b>{{ userSession.firstName }}</b>
									</span>

									<li class="nav-item dropdown">
										<a class="nav-link dropdown-toggle" href="/adminmenu" id="navebarDropdown" data-toggle="dropdown">Admin</a>
										<div class="dropdown-menu">
											<a class="dropdown-item" href="/additem">Items</a>
											<a class="dropdown-item" href="/orders">Orders</a>
											<a class="dropdown-item" href="/cards">Cards</a>
											<a class="dropdown-item" href="/users">Users</a>
										</div>
									</li>
									<li class="nav-item">
										<a class="nav-link" href="/profile">Profile</a>
									</li>
									<li class="nav-item">
										<a class="nav-link" href="/logout">Logout</a>
									</li>

									<li class="nav-item">
										<a class="nav-link" href="/cart">
											<svg width="1.5em" height="1.5em" viewbox="0 0 16 16" class="bi bi-cart justify-content-end" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
												<path fill-rule="evenodd" d="M0 1.5A.5.5 0 0 1 .5 1H2a.5.5 0 0 1 .485.379L2.89 3H14.5a.5.5 0 0 1 .491.592l-1.5 8A.5.5 0 0 1 13 12H4a.5.5 0 0 1-.491-.408L2.01 3.607 1.61 2H.5a.5.5 0 0 1-.5-.5zM3.102 4l1.313 7h8.17l1.313-7H3.102zM5 12a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm7 0a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm-7 1a1 1 0 1 0 0 2 1 1 0 0 0 0-2zm7 0a1 1 0 1 0 0 2 1 1 0 0 0 0-2z"/>
											</svg>
										</a>
									</li>
								</ul>
							</div>
						</nav>

					{% else %}

						<nav class="navbar navbar-light navbar-expand-md bg-warning fixed-top pl-3 pr-3 pt-2 text-white">
							<a class="navbar-brand nav-item nav-link active" href="/">
								J<sub>
									i</sub>
								<sup>t</sup>
								t<sub>
									e</sub>
								<sup>r</sup>
								s
							</a>

							<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent">
								<span class="navbar-toggler-icon"></span>
							</button>

							<div class="collapse navbar-collapse" id="navbarSupportedContent">
								<ul class="navbar-nav ml-auto text-white">
									<li class="nav-item">
										<a class="nav-link" href="/rewards">Rewards</a>
									</li>
									<li class="nav-item">
										<a class="nav-link" href="/cards">Cards</a>
									</li>
									<li class="nav-item">
										<a class="nav-link" href="/login">Log in</a>
									</li>
									<li class="nav-item">
										<a class="nav-link" href="/register">Register</a>
									</li>
									<li class="nav-item">
										<a class="nav-link" href="/cart">
											<svg width="1.5em" height="1.5em" viewbox="0 0 16 16" class="bi bi-cart justify-content-end" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
												<path fill-rule="evenodd" d="M0 1.5A.5.5 0 0 1 .5 1H2a.5.5 0 0 1 .485.379L2.89 3H14.5a.5.5 0 0 1 .491.592l-1.5 8A.5.5 0 0 1 13 12H4a.5.5 0 0 1-.491-.408L2.01 3.607 1.61 2H.5a.5.5 0 0 1-.5-.5zM3.102 4l1.313 7h8.17l1.313-7H3.102zM5 12a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm7 0a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm-7 1a1 1 0 1 0 0 2 1 1 0 0 0 0-2zm7 0a1 1 0 1 0 0 2 1 1 0 0 0 0-2z"/>
											</svg>
										</a>
									</li>
								</ul>
							</div>
						</nav>
					{% endif %}
				{% endblock header %}


				{% block content %}{% endblock %}


				{% block footer %}
				<br>
					<nav class="navbar navbar-expand-md navbar-light bg-warning fixed-bottom p-2 ">
						<span class=" mx-auto">
							&nbsp;&nbsp;&nbsp; &copy; Copyright 2020 by
							<a href="https://www.linkedin.com/in/mark-b-5533287/">
								<span class="underline">Mark Boswick</span>
							</a>
							and
							<a href="https://www.linkedin.com/in/michellelefebvre1/">
								<span class="underline">Michelle Lefebvre</span>
							</a>
						</span>
					</nav>
				{% endblock footer %}
			</div>
		</body>
	</html>
