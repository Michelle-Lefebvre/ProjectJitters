{% extends "admin/master.html.twig" %}

{% block title %}Item list{% endblock %}

{% block content %}
    <h3>Item List</h3>
    <table border="1">
        <tr><th>id</th><th>name</th><th>description</th><th>category code</th><th>quantity on hand</th><th>price</th><th>price Med</th><th>price Lrg</th><th>Action</th></tr>
    {% for u in itemsList %}
        <tr><td>{{u.itemId}}</td><td>{{u.itemName}}</td><td>{{u.description}}</td><td>{{u.categoryCode}}</td><td>{{u.quantityOnHand}}</td><td>{{u.price}}</td><td>{{u.priceMed}}</td><td>{{u.priceLrg}}</td>
        <td><a href="/admin/items/edit/{{u.itemId}}">edit</a>
            <a href="/admin/items/delete/{{u.itemId}}">delete</a>
        </td></tr>
    {% endfor %}
    </table>
{% endblock %}