    <div class="form-group row">
        <label for="itemname" class="col-sm-4 col-form-label">Name: </label> 
        <input id="itemname" class="col-sm-8 form-control"  type="text" name="itemName" placeholder="Item Name" value=""></input>
    </div>

    <div class="form-group row">
        <label for="description" class="col-sm-4 col-form-label">Description: </label> 
        {#<input id="description" class="col-sm-8 form-control" rows="5" type="textarea" name="description" placeholder="Item Description" value=""></input>
        #}
        <textarea id="description" class="col-sm-8 form-control" rows="5" type="textarea" name="description" placeholder="Item Description" value=""></textarea>
    </div>
    <div class="form-group row">
        <label for="categoryCode" class="col-sm-4 col-form-label">Category Code: </label>
        <input type="text" name="categoryCode" class="col-sm-8 form-control" placeholder="Category Code" value="">
    </div>  
    <div class="form-group row">
        <label class="col-sm-4 col-form-label">Inventory Flag: </label>
        <input type="checkbox" name="inventoryFlag" class="col-sm-1 form-control" placeholder="Inventory Flag" value="">
    </div> 
    <div class="form-group row">
            <label for="" class="col-sm-4 col-form-label">Quantity On Hand: </label>
            <input type="number" name="quantityOnHand" class="col-sm-4 form-control" placeholder="Quantity On Hand" value="">
    </div> 
    <div class="form-group row">
        <label for="" class="col-sm-4 col-form-label">Price:  </label>
        <input type="number" name="price" class="col-sm-4 form-control" placeholder="Price with 2 decimal places" step="any" value="">
    </div> 
    <div class="form-group row">
        <label for="" class="col-sm-4 col-form-label">Photo File Path: </label>
         <input type="text" name="photofilepath" class="col-sm-8 form-control" placeholder="Photo File Path" value="">
    </div> 
    <div class="form-group row">
        <label for="" class="col-sm-3 col-form-control"> </label>
        <input type="submit" class="btn btn-primary" value="Admin Add Item">
    </div> 

    </form>
  </div>

    
    
{% endblock %}